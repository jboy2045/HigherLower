<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creid.higherlower.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@drawable/imprint"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/firstLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guess a number between 1 and 20"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/secondLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/guessText"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/firstLabelText"
            android:layout_marginTop="35dp"
            android:text="Guess below:" />

        <EditText
            android:id="@+id/guessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/secondLabelText"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:hint="Enter number"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/firstLabelText"
            android:layout_below="@+id/guessText"
            android:layout_marginTop="60dp"
            android:background="@color/colorPrimary"
            android:onClick="getGuessNumber"
            android:text="Guess" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
